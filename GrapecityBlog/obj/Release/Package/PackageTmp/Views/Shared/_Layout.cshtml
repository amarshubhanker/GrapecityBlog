<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Grapecity Blog", "Index", "Blog", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="col-md-12 navbar-collapse collapse">
                <ul class="col-md-12 nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="col-md-3">@Html.ActionLink("Create", "Create", "Blog")</li>
                        <li class="col-md-6" style="float:right">@Html.ActionLink(@User.Identity.Name, "EditProfile", "Account", new { email = User.Identity.Name }, null)</li>
                        <li class="col-md-3" style="float:right">@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li class="col-md-3">@Html.ActionLink("Login", "Login", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>----Grapecity Blogs Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
