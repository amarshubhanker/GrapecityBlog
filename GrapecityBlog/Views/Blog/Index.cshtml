@model IEnumerable<GrapecityBlog.blog>

@{
    ViewBag.Title = "Home";
}

<h2>Home Page</h2>


@if (Model is null || Model.Count() == 0)
{
<h4>No Blog to display</h4>
}

else
{
<table class="table">

    <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.blogTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.blogcategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.blogDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Blog", new { id = item.id }, null)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Blog", new { id = item.id }, null)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Blog", new { id = item.id }, null)
            </td>
        </tr>
    }

</table>

}
